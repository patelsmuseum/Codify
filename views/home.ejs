<link rel="stylesheet" href="/css/home.css">
<script src="https://kit.fontawesome.com/605225b4c1.js" crossorigin="anonymous"></script>

<div id="container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user) { %>
            <form action="/posts/create" method="POST" id="new-post-form">
                <textarea name="content"  cols="140" rows="10" placeholder="Type Here..." required></textarea>
                <input type="submit" value="Post">
            </form>
        <% } %>
    
        <div id="posts-list-container">
            <ul style="list-style: none;">
                <% for(post of posts) { %>
                    <div id="post-wrapper">
                        <%- include('_post') -%>
                    </div>
                    
                <%} %>
            </ul>
    
        </div>
    
    </section>
    
    <section id="user-friends">
        <h4>Friends</h4>
        <% for( u of all_users) {%>
            <a href="/users/profile/<%=u.id %>">
                <div class="friend-profile-row">
                    <div class="friend-avatar-container">
                        <img src="<%= u.avatar || '/images/default-avatar.png' %>" 
                             alt="<%= u.name %>" 
                             class="friend-avatar"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="friend-avatar-fallback">
                            <%= u.name.charAt(0).toUpperCase() %>
                        </div>
                    </div>
                    <span class="friend-username"><%= u.name %></span>
                </div>
            </a>
        <% } %>
        
    </section>
    <!-- <% if(locals.user){%>
        <%- include("_chat_box") %> 
    <%}%> -->
    
               
</div>
